<Window x:Class="MyAnnotationCopy.UI.MyAnnotationMain.MyAnnotationMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyAnnotationCopy.UI.MyAnnotationMain"
        xmlns:u="clr-namespace:MyAnnotationCopy.Component"
        xmlns:lib="clr-namespace:OsnCsLib.WPFComponent.Control;assembly=OsnCsLib.WPFComponent"
        mc:Ignorable="d"
        Title="アノテーションコピー" Height="180" Width="390" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MyAnnotationCopy;component/Component/Generic.xaml"  />
                <ResourceDictionary Source="pack://application:,,,/OsnCsLib.WPFComponent;component/Themes/Generic.xaml"  />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="10, 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="▲" Style="{StaticResource LabelButton}" Margin="0,5,10,5" Command="{Binding CountUpCommand}"/>
            <lib:CustomTextBox Width="35" TextAlignment="Right" Text="{Binding AppData.CurrentNumber}"/>
            <Button Content="▼" Style="{StaticResource LabelButton}" Command="{Binding CountDownCommand}"/>
            <Button Content="reset" Style="{StaticResource LabelButton}"  Command="{Binding ResetCommand}"/>
        </StackPanel>

        <!-- 実装速度を優先するためListViewは使用しない -->
        <u:AnnottionControl Grid.Row="1" 
                            IsUseIncrement="{Binding AppData.SettingDetail[0].IsUseIncrement}"
                            IsUseWide="{Binding AppData.SettingDetail[0].IsUseWide}"
                            Prefix="{Binding AppData.SettingDetail[0].Prefix}"
                            CurrentNumberLabel="{Binding AppData.CurrentNumber}"
                            Safix="{Binding AppData.SettingDetail[0].Safix}"/>
        <u:AnnottionControl Grid.Row="2" 
                            IsUseIncrement="{Binding AppData.SettingDetail[1].IsUseIncrement}"
                            IsUseWide="{Binding AppData.SettingDetail[1].IsUseWide}"
                            Prefix="{Binding AppData.SettingDetail[1].Prefix}"
                            CurrentNumberLabel="{Binding AppData.CurrentNumber}"
                            Safix="{Binding AppData.SettingDetail[1].Safix}"/>
        <u:AnnottionControl Grid.Row="3" 
                            IsUseIncrement="{Binding AppData.SettingDetail[2].IsUseIncrement}"
                            IsUseWide="{Binding AppData.SettingDetail[2].IsUseWide}"
                            Prefix="{Binding AppData.SettingDetail[2].Prefix}"
                            CurrentNumberLabel="{Binding AppData.CurrentNumber}"
                            Safix="{Binding AppData.SettingDetail[2].Safix}"/>

    </Grid>
</Window>
